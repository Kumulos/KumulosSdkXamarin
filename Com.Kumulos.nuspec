<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2012/06/nuspec.xsd">
    <metadata>
        <id>Com.Kumulos</id>
        <version>6.0.0.0</version>
        <title>Kumulos SDK for Xamarin</title>
        <authors>Kumulos Ltd</authors>
        <owners>Kumulos Ltd</owners>
        <license type="expression">MIT</license>
        <projectUrl>https://github.com/Kumulos/KumulosSdkXamarin</projectUrl>
        <iconUrl>https://github.com/Kumulos/KumulosSdkXamarin/blob/master/nuget_icon.png?raw=true</iconUrl>
        <icon>nuget_icon.png</icon>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>Xamarin SDK For Kumulos</description>
        <summary>The Kumulos SDK provides audience and engagement analytics; marketing automation and geo-targeted push notifications; backend storage and API management; and crash reporting for your Xamarin apps.</summary>
        <tags>xamarin, monodroid, C#, Kumulos, push, analytics, crash reporting</tags>
        <dependencies>
            <group targetFramework="monoandroid">
                <dependency id="Newtonsoft.Json" version="12.0.3" />
                <dependency id="Square.OkHttp3" version="4.9.1" />
                <dependency id="Xamarin.AndroidX.Core" version="1.6.0" />
                <dependency id="Xamarin.AndroidX.Work.Runtime" version="2.5.0.2" />
                <dependency id="Xamarin.Firebase.Messaging" version="71.1740.4" />
                <dependency id="Xamarin.GooglePlayServices.Base" version="117.6.0" />
            </group>
            <group targetFramework="netstandard2.0">
                <dependency id="NETStandard.Library" version="2.0.3" />
                <dependency id="Newtonsoft.Json" version="12.0.2" />
            </group>
            <group targetFramework="xamarinios">
                <dependency id="Newtonsoft.Json" version="12.0.3" />
            </group>
        </dependencies>
    </metadata>
    <files>
        <file src="nuget_icon.png" target="\nuget_icon.png" />

        <!--Core-->
        <file src="Com.Kumulos\bin\Release\netstandard2.0\Com.Kumulos.pdb" target="lib\netstandard2.0" />
        <file src="Com.Kumulos\bin\Release\netstandard2.0\Com.Kumulos.dll" target="lib\netstandard2.0" />
        <file src="Com.Kumulos.Abstractions\bin\Release\netstandard2.0\Com.Kumulos.Abstractions.pdb" target="lib\netstandard2.0" />
        <file src="Com.Kumulos.Abstractions\bin\Release\netstandard2.0\Com.Kumulos.Abstractions.dll" target="lib\netstandard2.0" />

        <!--Xamarin.Android-->
        <file src="Com.Kumulos.Android\bin\Release\*Kumulos.*" target="lib\monoandroid" />

        <!--Xamarin.iOS Unified-->
        <file src="Com.Kumulos.iOS\bin\Release\*Kumulos.*" target="lib\xamarinios" />
    </files>
</package>
